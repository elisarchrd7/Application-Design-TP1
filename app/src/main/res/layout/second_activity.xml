<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    >

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="76dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/fleche"
        android:contentDescription="Retour a la page d'accueil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageAppleWatch1"
        android:layout_width="311dp"
        android:layout_height="311dp"
        android:src="@drawable/apple_watch_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/customLayout"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:cardCornerRadius="14dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardElevation="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="360dp"
                android:layout_height="46dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp">

                <TextView
                    android:id="@+id/textAppleWatch2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:fontWeight="700"
                    android:lineHeight="24dp"
                    android:layout_centerHorizontal="true"
                    android:text="Apple Watch Series 7"
                    android:textColor="#1B153D"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/textSeries2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontWeight="500"
                    android:lineHeight="14sp"
                    android:text="( With solo loop )"
                    android:textColor="#9095A6"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textPrice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontWeight="500"
                    android:text="$799"
                    android:textColor="#5B41FF"
                    android:textSize="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="7dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textSeries3"
                android:layout_width="317dp"
                android:layout_height="68dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="89dp"
                android:fontWeight="400"
                android:lineHeight="22dp"
                android:text="The aluminium case is lightweight and made from 100 percent recycled aerospace grade alloy."
                android:textColor="#9095A6"
                android:textSize="16sp"

                />

            <Button
                android:id="@+id/myButton"
                android:layout_width="335dp"
                android:layout_height="71dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="250dp"
                android:background="@drawable/button_background"
                android:contentDescription="Ajouter au panier"
                android:fontFamily="sans-serif-medium"
                android:lineHeight="23dp"
                android:text="Add to cart"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
